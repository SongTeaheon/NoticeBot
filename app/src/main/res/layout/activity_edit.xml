<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditActivity"
    >

    <ToggleButton
        android:id="@+id/Toggle_Board1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textOff="@string/btn_board1"
        android:textOn="@string/btn_board1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Toggle_Board2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keyword_typing"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        />

    <ToggleButton
        android:id="@+id/Toggle_Board2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textOff="@string/btn_board2"
        android:textOn="@string/btn_board2"
        app:layout_constraintLeft_toRightOf="@id/Toggle_Board1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keyword_typing"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:id="@+id/keyword_typing"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/keyword_add"
        app:layout_constraintTop_toBottomOf="@id/Toggle_Board1"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_keyword_edit"
        />

    <Button
        android:id="@+id/keyword_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/keyword_typing"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Toggle_Board2"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_keyword_edit"
        android:background="@drawable/btn_green"
        android:text="+"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_keyword_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/keyword_typing"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        />


</androidx.constraintlayout.widget.ConstraintLayout>